<body class="body-light">
  <div class="body-light-container">

    <div class="title title-dark">
      <div class="title-container">
        <h1>Marketing</h1>

        <table>
          <thead>
            <tr>
  						<th>Nome</th>
              <th>Admin</th>
  						<th>Diretor</th>
  					</tr>
          </thead>
          <tbody>
              <% @users.each do |user| %>
              <tr>
                <td><%= user.full_name %></td>
                <td><%= user.admin %></td>
    						<td>
                  <%= form_for(:direction, url: :mari , method: :patch) do |f| %>
                  <%= check_box(:user, :director) %>
                  <%= hidden_field_tag :user_id, user.id %>
                  <%= f.submit "adicionar", id:"info-btn" %>
                  <% end %>
		</div>
                </td>
              </tr>
              <% end %>
          </tbody>
        </table>

      </div>
    </div>
  </div>
</body>
