<body class="body-light">
  <div class="body-light-container">

    <div class="title title-dark">
      <div class="title-container">
        <h1>Financeiro</h1>
    </div>
  </div>

        <%# render 'form', direction: @users %>

        <table>
          <thead>
            <tr>
  		<th>Nome</th>
                <th>Admin</th>
  		<th>Diretor</th>
  	    </tr>
          </thead>
          <tbody>
              <% @users.each do |user| %>
              <tr>
                <td><%= user.full_name %></td>
                <td><%= user.admin %></td>
    		<td>
		<div class="info-actions">
                  <%= form_for(:direction, url: :teste , method: :patch) do |f| %>
                  <%= check_box(:user, :director) %>
                  <%= hidden_field_tag :user_id, user.id %>
                  <%= f.submit "add diretor", id:"info-btn" %>
                  <% end %>
		</div>
                </td>
              </tr>
              <% end %>
          </tbody>
        </table>
        
      </div>
    </div>

  </div>
</body>
