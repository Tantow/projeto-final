<div class="body-light">
	<div class="body-light-container">
	
	<div class="title-dark">
		<div class="title-dark-container">
			<h1>Times</h1>
		</div>
	</div>

		<p id="notice"><%= notice %></p>
		
		<div class="new-team-container">
			<%= render 'form', team: @team %>
		</div>

		<table class="teams-table">
  			<tbody>
  			  <% @teams.each do |team| %>
			      <tr>
       				 <td><%= link_to team.teamname, team %> <div class="team-arquivar-btn"><%= link_to 'Arquivar', team, method: :delete, data: { confirm: 'Are you sure?' } %></div></td>
    			  </tr>
  			  <% end %>
			</tbody>
		</table>

	</div>
</div>
