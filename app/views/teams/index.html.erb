<div class="teams-body">
	<div class="teams-container">

		<h1>Times</h1>

<table>
  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.teamname %></td>
        <td><%= link_to 'Ver', team %></td>
        <td><%= link_to 'Editar', edit_team_path(team) %></td>
        <td><%= link_to 'Arquivar time', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

		<p id="notice"><%= notice %></p>
		
		<div class="new-team-container">
			<%= render 'form', team: @team %>
		</div>

		<table>
  			<tbody>
  			  <% @teams.each do |team| %>
			      <tr>
       				 <td><%= link_to team.teamname, team %></td>
    			  </tr>
  			  <% end %>
			</tbody>
		</table>

	</div>
</div>
