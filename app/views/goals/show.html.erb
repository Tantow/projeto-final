<p id="notice"><%= notice %></p>

<body class="body-light">
	<div class="body-light-container">


		<div class="title title-dark">
			<div class="title-container">
				<h1>
 					<%= @goal.title %>
				</h1>
			</div>
		</div>


		<div class="projects info">
			<p>
			  <strong>Descrição:</strong>
			  <%= @goal.description %>
			</p>

			<p>
			  <strong>Início:</strong>
			  <%= @goal.start %>
			</p>

			<p>
			  <strong>Fim:</strong>
			  <%= @goal.deadline %>
			</p>

			<p>
			  <strong>Status:</strong>
			  <%= @goal.status %>
			</p>

			<div class="info-actions">
				<%= link_to 'Editar', edit_goal_path(@goal), id:"info-btn" %>
				<%= link_to 'Voltar', goals_path, id:"info-btn" %>
			</div>
	
		</div>

	</div>
</body>
