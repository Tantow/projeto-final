<section class="edit-container">
<%= form_with(model: task, local: true, html:{class: "register-container"}) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :title, :placeholder => "Título", id: :task_title %>
  </div>

  <div class="field">
    <%= form.text_field :content, :placeholder => "Conteúdo", id: :task_content %>
  </div>

  <div class="field">
    <%= form.label "Concluído" %>
    <%= form.check_box :done, id: :task_done %>
  </div>

  <div class="edit-actions">
    <%= form.submit "Adicionar tarefa", id:"edit-actions-btn" %>
    <%= link_to 'Cancelar', tasks_path, id:"cancel-btn" %>
  </div>
<% end %>
</div>
