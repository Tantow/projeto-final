<div class="body body-light">
	<div class="body-light-container projects-body-container">

		<p id="notice"><%= notice %></p>

		<div class="title title-dark">
			<div class="title-container">
				<h1>Projetos</h1>
			</div>
		</div>

	<div class="new-project">
		<div class="new-project-container">
			<%= link_to 'Novo Projeto', new_project_path, id:"new-project-btn" %>
		</div>
	</div>

		<div class="projects-table">
			<table>
				<thead>
					<tr>
						<th>Nome</th>
						<th>Prazo</th>
						<th>PMO</th>
						<th>Gerente</th>
						<th colspan="3"></th>
					</tr>
				</thead>

				<tbody>
					<% @projects.each do |project| %>
					<tr>
						<td><%= project.name %></td>
						<td><%= project.deadline %></td>
						<td><%= project.pmo %></td>
						<td><%= project.manager %></td>
						<td class="table-btn">
							<%= link_to 'Ver', project, id: "show-btn" %>
							<%= link_to 'Editar', edit_project_path(project) , id: "edit-btn" %>
							<%= link_to 'Excluir', project, method: :delete, data: { confirm: 'Are you sure?' }, id: "destroy-btn"%>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
