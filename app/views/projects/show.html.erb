<p id="notice"><%= notice %></p>

<body class="body-light">
	<div class="body-light-container">

		<div class="title title-dark">
			<div class="title-container">
				<h1>
					<%= @project.name %>
				</h1>
			</div>
		</div>
		
		
		<div class="projects info">
			
		<p>
		  <strong>Descrição:</strong>
		  <%= @project.description %>
		</p>
		
		<p>
		  <strong>Prazo:</strong>
		  <%= @project.deadline %>
		</p>

		<p>
		  <strong>PMO:</strong>
		  <%= @pmo.full_name %>
		</p>

		<p>
		  <strong>Gerente:</strong>
		  <%= @project.manager %>
		</p>
		
		<p>
		  <strong>Time:</strong>
		  <%= @project.team_id %>
		</p>

		<p>
		  <strong>Trello:</strong>
		  <%= @project.trello %>
		</p>

		<div class="info-actions">
			<%= link_to 'Editar', edit_project_path(@project), id:"info-btn" %>
			<%= link_to 'Voltar', projects_path, id:"info-btn" %>
		</div>
	
		</div>

	</div>
</body>
