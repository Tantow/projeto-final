<div class="project-form">

<%= form_with(model: project, local: true) do |form| %>
  <% if project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "Nome" %>
    <%= form.text_field :name, id: :project_name %>
  </div>


  <div class="field">
    <%= form.label "Descrição" %>
    <%= form.text_field :description, id: :project_description %>
  </div>

  <div class="field">
    <%= form.label "Prazo" %>
    <%= form.datetime_select :deadline, id: :project_deadline %>
  </div>

  <div class="field">
    <%= form.label "PMO" %>
    <%= form.text_field :pmo, id: :project_pmo %>
  </div>

  <div class="field">
    <%= form.label "Gerente" %>
    <%= form.text_field :manager, id: :project_manager %>
  </div>

  <div class="field">
    <%= form.label "Escolha o time" %>
    <%= form.select(:team_id, @teams.collect { |team| [team.teamname, team.id] },
       {include_blank: "Time"}) %>
  </div>

  <div class="field">
    <%= form.label "Trello" %>
    <%= form.text_field :trello, id: :project_trello %>
  </div>

  <div class="form-actions">
	  <%= form.submit "Criar projeto", id: "create-btn" %>
  </div>
  <% end %>

</div>
