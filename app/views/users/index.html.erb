<p id="notice"><%= notice %></p>

<h1>Usuários</h1>

<table>
  <thead>
    <tr>
      <th>Nome completo</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Ver', user %></td>
        <td><%= link_to 'Editar', edit_user_path(user) %></td>
        <% if current_user.admin || current_user == user %>            
          <td><%= link_to 'INativar', user, method: :delete, data: { confirm: 'Tem certeza que deseja deletar?' } %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Novo Usuário', new_user_path %> |
<%= link_to 'Todos os Usuários', users_path %> |

<%= link_to 'Todos os Times', teams_path %> |
