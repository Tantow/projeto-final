<%= link_to "Entre", login_path%> | <%= link_to "Cadastre-se", new_user_path %>
<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "Nome completo" %>
    <%= form.text_field :full_name, id: :user_full_name %>
  </div>

  <div class="field">
    <%= form.label "Email" %>
    <%= form.text_field :email, id: :user_email %>
  </div>

  <div class="field">
	  <%= form.label "Senha" %>
	  <%= form.password_field :password, id: :usuario_password %>
	</div>

	<div class="field">
	  <%= form.label "Confirmação de Senha" %>
	  <%= form.password_field :password_confirmation, id: :usuario_password_confirmation %>
	</div>


  <div class="actions">
    <%= form.submit "Cadastrar" %>
  </div>
<% end %>
